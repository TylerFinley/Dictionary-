class Dictionary
  attr_reader(:definition, :words)
  @@dictionaries = []


  define_method(:initialize) do |attributes|
    @definition = attributes.fetch(:definition)
    @dictionary_id = @@dictionaries.length().+(1)
    @words = []

  end

  define_singleton_method(:all) do
    @@dictionaries
  end

  define_method(:dictionary_id) do
    @dictionary_id
  end

  define_method(:save) do
    @@dictionaries.push(self)
  end

  define_method(:delete) do
    @@dictionaries.delete(self)
  end

  define_singleton_method(:clear) do
    @@dictionaries = []
  end

  define_method(:id) do
    @dictionary_id
  end

  define_singleton_method(:find) do |identification|
    found_dictionary = nil
    @@dictionaries.each() do |dictionary|
      if dictionary.id() == identification.to_i
        found_dictionary = dictionary
      end
    end
    found_dictionary
  end

  define_method(:add_word) do |word|
    @words.push(word)
  end

end
